<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    android:padding="16dp"
    tools:context=".HubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Overview"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <com.eisenreich.axolotladventure.LevelProgressView
            android:id="@+id/level1Progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <com.eisenreich.axolotladventure.LevelProgressView
            android:id="@+id/level2Progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <com.eisenreich.axolotladventure.LevelProgressView
            android:id="@+id/level3Progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/button_toMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Menu"
            android:backgroundTint="#FFB6C1"/>
    </LinearLayout>
</ScrollView>